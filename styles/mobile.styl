@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sub-sidebar
    display: none
  .sidebar
    font-size 15px
    border-right 1px solid $borderColor
    width $mobileSidebarWidth
    transform: translateX(0)
    .pinWraper
        display: none
    .sidebar-sub-headers
      display: block
  .page
    padding-left $mobileSidebarWidth
    padding-right 0
  .sidebar-mask
      display: none
